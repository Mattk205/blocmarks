<h1><%= @topic.title %></h1>
<% @topic.bookmarks.each do |bookmark| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to bookmark.url, topic_bookmark_path(@topic, bookmark) %>
          </h4>
          <small>
            submitted <%= time_ago_in_words(bookmark.created_at) %> ago by <%= bookmark.user.username %> <br>
          </small>
        </div>
      </div>
    <% end %>
    <div class="col-md-4">
      <%= link_to "New Bookmark", new_topic_bookmark_path(@topic), class: 'btn btn-success' %>
    </div>
